# Use Maven image to build the application
FROM maven:3.8.6-eclipse-temurin-17 AS builder

# Set the working directory inside the container
WORKDIR /app

# Copy Maven configuration files first for dependency caching
COPY pom.xml .
COPY mvnw .
COPY .mvn .mvn

# Download dependencies
RUN ./mvnw dependency:resolve

# Copy the rest of the application source code
COPY src ./src

# Build the application
RUN ./mvnw clean install

# Use a lightweight JRE image for running the application
FROM eclipse-temurin:17-jre-jammy

# Set the working directory
WORKDIR /app

# Copy the built JAR from the builder stage
COPY --from=builder /app/target/users-api-0.0.1-SNAPSHOT.jar users-api.jar

# Expose the port the users-api will run on
EXPOSE 8083

# Set environment variables (can be overridden in docker-compose.yml)
ENV SERVER_PORT=8083
ENV JWT_SECRET=myfancysecret

# Run the application
CMD ["java", "-jar", "users-api.jar"]
